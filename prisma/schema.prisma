generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  Ingredient  Ingredient[]
  Step        Step[]
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  recipe   Recipe  @relation(fields: [recipeId], references: [id])
  recipeId Int
  name     String
  quantity Int
  unit     String?
}

model Step {
  id          Int    @id @default(autoincrement())
  recipe      Recipe @relation(fields: [recipeId], references: [id])
  recipeId    Int
  num         Int
  description String
}
